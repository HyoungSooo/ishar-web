{%- set page = 'admin' -%}
{% extends "base/layout.html.j2" %}
{% block meta_title %}Patches / Administration Portal{% endblock meta_title %}
{% block meta_description %}Administration portal to upload patch notes{% endblock meta_description %}
{% block meta_url %}{{ url_for('.index', _external=True) }}{% endblock meta_url %}
{% block title %}Patches / Administration Portal{% endblock title %}
{% block header %}Patches{% endblock header %}
{%- macro render_field(field) %}
                    <tr>
                        <td class="admin-{{ field.name | safe }}">
                            {{ field.label | safe }}
                        </td>
                        <td class="admin-{{ field.name | safe }}">
                            {{ field(**kwargs) | safe }}
    {%- if field.errors %}
                            <ul class="flash-error">
        {%- for error in field.errors %}
                                <li>
                                    {{ error }}
                                </li>
        {%- endfor %}
                            </ul>
    {%- endif %}
                        </td>
                    </tr>
{%- endmacro %}
{%- block scripts %}
    {%- if all_patches and all_patches is iterable and all_patches | length > 0 %}
        <script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>
        <script>
            function showPatches(where) {
                new gridjs.Grid({
                    columns: [
                        {
                            id:     'name',
                            name:   'Patch Name'
                        },
                        {
                            id:     'modified',
                            name:   'Modified'
                        },
                        {
                            id:     'size',
                            name:   'Size'
                        },
                        {
                            id:     'delete',
                            name:   'Delete',
                        }
                    ],
                    data: [
                      {%- for patch in all_patches %}
                        {
                            name:       gridjs.html(`<a href="{{ url_for('static', filename='patches/'+patch.name) }}" target="_blank">{{ patch.name }}</a>`),
                            modified:   "{{ patch.modified.strftime('%A, %B %d, %Y') }}",
                            size:       "{{ patch.size }}",
                            delete: gridjs.html(`<a href="{{ url_for('.delete', delete_patch_name=patch.name) }}" onclick="return confirm('Are you sure you want to delete this patch file?');">‚ùå</a>`)
                        }{% if not loop.last %},{% endif %}
                      {%- endfor %}
                    ],
                    search: true,
                    sort: true,
                    pagination: true
                }).render(where);
            };
        </script>
    {%- endif %}
{%- endblock scripts %}
{%- block content %}
    {%- if patch_add_form is defined %}
                <h3 title="Add">Add</h3>
                <form autocomplete="off" method="post" enctype="multipart/form-data" action="{{ url_for('.index') }}" id="patches-add-form">
                    <table>
                        {{ render_field(patch_add_form.name, autocomplete='off') }}
                        {{ render_field(patch_add_form.file, autocomplete='off') }}
                        <tr>
                            <td colspan="2">
                                <i>Note: Please stick to less than 25MiB in size.</i>
                            </td>
                        </tr>
                        {{ patch_add_form.csrf_token }}
                        {{ render_field(patch_add_form.submit) }}
                    </table>
                </form>
    {%- endif %}
    {%- if all_patches and all_patches is iterable and all_patches | length > 0 %}
                <hr>
                <div id="all-patches"></div>
                <script>
                    showPatches(document.getElementById('all-patches'));
                </script>
    {%- endif %}
{%- endblock content %}