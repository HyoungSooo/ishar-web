{%- set page = 'admin' -%}
{% extends "base/layout.html.j2" %}
{% block meta_title %}Administration Portal{% endblock meta_title %}
{% block meta_description %}Administration portal for Gods of Ishar MUD{% endblock meta_description %}
{% block meta_url %}{{ url_for('.index', _external=True) }}{% endblock meta_url %}
{% block title %}Administration Portal{% endblock title %}
{% block header %}<a href="{{ url_for('.index') }}">Administration</a>{% endblock header %}
{%- block content %}
            <p>
                Welcome to the Ishar MUD web administration portal!
            </p>
            <ul>
            {%- if current_user.is_god %}
                <li title="Accounts">
                    <a href="{{ url_for('.admin_accounts.index') }}">Accounts</a>
                </li>
                <li title="Global Events">
                    <a href="{{ url_for('.admin_events.index') }}">Global Events</a>
                </li>
                <li title="News">
                    <a href="{{ url_for('.admin_news.index') }}">News</a>
                </li>
                <li title="Patches">
                    <a href="{{ url_for('.admin_patches.index') }}">Patches</a>
                </li>
            {%- endif %}
                <li title="Quests">
                    <a href="{{ url_for('.admin_quests.index') }}">Quests</a>
                </li>
            {%- if current_user.is_god %}
                <li title="Seasons">
                    <a href="{{ url_for('.admin_seasons.index') }}">Seasons</a>
                </li>
            {%- endif %}
            </ul>
{%- endblock content %}
