{% extends "layout.html.j2" %}
{% block meta_title %}Season Management / Administration Portal{% endblock meta_title %}
{% block meta_description %}Administration portal page to manage seasons{% endblock %}
{% block meta_url %}{{ url_for('admin_season_add', _external=True) }}{% endblock meta_url %}">
{% block title %}Season Management / Administration Portal{% endblock %}
{% block header %}Season Management{% endblock %}
{%- block content %}
            <table>
    {%- if seasons is defined and seasons is iterable and seasons | length > 0 %}
        {%- for season in seasons %}
            {%- if loop.index0 % 10 == 0 %}
                    <tr>
                        <th title="Season ID">
                            Season ID
                        </th>
                        <th title="Effective Date">
                            Effective Date
                        </th>
                        <th title="Expiration Date">
                            Expiration Date
                        </th>
                    </tr>
            {%- endif %}
                <tr {%- if season.is_active == 1 %} class="active-season"{% endif %}>
                    <td title="ID: {{ season.season_id }}">
                        {{ season.season_id }}
                        {%- if season.is_active == 1 %}
                        <a title="Expire" href="{{ url_for('admin_season_expire', expire_season=season.season_id) }}">‚ùå</a>
                        {%- endif %}
                    </td>
                    <td title="Effective: {{ season.effective_date.strftime('%A, %B %d, %Y @ %H:%M:%S %Z') }}">
                        {{ season.effective_date }}
                    </td>
                    <td title="Expiration: {{ season.expiration_date.strftime('%A, %B %d, %Y @ %H:%M:%S %Z') }}">
                        {{ season.expiration_date }}
                    </td>
                </tr>
        {%- endfor %}
    {%- else %}
                <tr>
                    <th title="Unfortunately, no seasons could be found.">
                        <i>Unfortunately, no seasons could be found.</i>
                    </th>
                </tr>
    {%- endif %}
            </table>
            <p>
                <a href="{{ url_for('admin_season_add') }}">Add Season</a>
            </p>
{% include('back.html.j2') %}
{%- endblock %}
