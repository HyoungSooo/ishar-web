{%- set page = 'admin' -%}
{% extends "layout.html.j2" %}
{% block meta_title %}Edit Account: {{ edit_account.account_name | title | safe }} / Administration Portal{% endblock meta_title %}
{% block meta_description %}Administration portal to edit a user account{% endblock %}
{% block meta_url %}{{ url_for('admin_edit_account', edit_account_id=edit_account.account_id, _external=True) }}{% endblock meta_url %}">
{% block title %}Edit Account: {{ edit_account.account_name | title | safe }} / Administration Portal{% endblock %}
{% block header %}Edit Account: <a href="{{ url_for('admin_account', manage_account_id=edit_account.account_id) }}">{{ edit_account.account_name | title | safe }}</a>{% endblock %}
{%- macro render_field(field) %}
                    <tr>
                        <td class="admin-{{ field.name | safe }}">
                            {{ field.label | safe }}
                        </td>
                        <td class="admin-{{ field.name | safe }}">
                            {{ field(**kwargs) | safe }}
    {%- if field.errors %}
                            <ul class="flash-error">
        {%- for error in field.errors %}
                                <li>
                                    {{ error }}
                                </li>
        {%- endfor %}
                            </ul>
    {%- endif %}
                        </td>
                    </tr>
{%- endmacro %}
{%- block content %}
    {%- if edit_account is defined and edit_account_form is defined %}
                <form autocomplete="off" method="post" action="{{ url_for('admin_edit_account', edit_account_id=edit_account.account_id) }}" id="account-edit-form">
                    <table>
                        <tr>
                            <td>
                                Account ID
                            </td>
                            <td>
                                {{ edit_account.account_id }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Players
                            </td>
                            <td>
        {%- if edit_account.players is defined and edit_account.players is iterable and edit_account.players | length > 0 %}
                                {{ edit_account.players | length }}
        {%- else %}
                                <i>None</i>
        {%- endif %}
                            </td>
                        </tr>
                        {{ render_field(edit_account_form.account_name, value=edit_account.account_name, autocomplete='off') }}
                        {{ render_field(edit_account_form.email, value=edit_account.email, autocomplete='off') }}
                        {{ render_field(edit_account_form.seasonal_points, value=edit_account.seasonal_points, autocomplete='off') }}
                        {{ render_field(edit_account_form.password, value='', autocomplete='off') }}
                        {{ render_field(edit_account_form.confirm_password, value='', autocomplete='off') }}
                        {{ edit_account_form.csrf_token }}
                        {{ render_field(edit_account_form.submit) }}
                    </table>
                </form>
    {%- endif %}
{%- endblock %}
